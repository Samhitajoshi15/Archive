#include <iostream>
using namespace std;
int i;
int birthdayCakeCandles(int candles[],int n)
{
  int maxcount=1,max;
  max=candles[0];
  for(i=0;i<n;i++)
  {
      if(max>candles[i])
      max=candles[i];
  }
  for(i=0;i<n;i++)
  {
      if(max==candles[i])
      maxcount++;
  }
  return maxcount;
}
int main()
{
    int n;
    cin>>n;
    int candles[n];
    for(i=0;i<n;i++)
    cin>>candles[i];
    cout<<birthdayCakeCandles(candles,n);
    return 0;
}
